<!doctype html>
<html>
    <head>
        <title>Experience - Tanawit Pattanaveerangkoon</title>
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Lato|Open+Sans|Roboto" rel="stylesheet">
    </head>
    <body>
        <div class="frame">
            <div class="container"> 
                <h1 class="header">Tanawit Pattanaveerangkoon</h1>
                <div class="row"> 
                    <div class="col-md-3">
                        <div class="navigation-frame"> 
                            <ul class="navigation">
                                <li><a href="">About me</a></li>
                                <li><a href="workexperience">Experience</a></li>
                                <li><a href="education">Education</a></li>
                                <li><a href="">Projects</a></li>
                                <li><a href="">Awards</a></li>
                            </ul>
                        </div>
                        <div class="profile-frame"> 
                            <h5 class="section-name">Profile</h5>
                            <img src="images/profile.jpg" class="img-responsive" alt="">
                            <p>I am a software engineer.</p>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="main-content"> 
                            <h5 class="section-name">Experience</h5>
                            <div class="work-experience">
                                {{range .}}
                                    <div class="content">
                                        <div class="media-left">
                                            {{if not .IsCurrentWork}}
                                                <h6 class="work-duration">{{.StartMonth}} {{.StartYear}}<br>-<br>{{.EndMonth}} {{.EndYear}}</h6>
                                            {{else}}
                                                <h6 class="work-duration">{{.StartMonth}} {{.StartYear}}<br>-<br>Present</h6>
                                            {{end}}
                                        </div>
                                        <div class="media-body">
                                            <div class="company-logo"><img src="images/{{.CompanyImagePath}}" alt=""></div>
                                            <h6>{{.Position}}</h6>
                                            <p>{{.CompanyName}}</p>
                                            <p>{{.CompanyLocation}}</p>
                                            <p style="margin-top:10px !important;">
                                                {{range .Description}}
                                                    â€¢ {{.}}<br>
                                                {{end}}
                                            </p>
                                        </div>
                                    </div>
                                {{end}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
